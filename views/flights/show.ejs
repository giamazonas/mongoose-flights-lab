<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>
  
  <main>
    <h1><%= title %></h1>
    <section>
      <div> Airline </div> 
      <div> <%= flight.airline %> 
      </div>
      <div>Airport </div>
      <div><%= flight.airport %></div>
      <div> Flight Number </div>
      <div><%= flight.flightNo %></div>
      <div> Departs </div>
      <div><%= flight.departs %></div>


      <form id="add-seat" action="/flights/<%= flight.id %>/tickets" method="POST">
        <h3>Add a Ticket </h3>
        <input name="seat" required pattern="[A-F][1-9]\d?" placeholder="A1-F99">
        <input name="price" type="number" min="0" placeholder="$1-999">
        <button type="submit">Add Ticket</button>
      </form>

    </section>
    <section>
      <% flight.tickets.forEach(ticket => { %>
        <p> <%= ticket.seat %> </p>
        <p> $ <%= ticket.price %> </p>
      <% }) %>
    </section>
    <section>
      <div>Meal Selection</div>
      <ul>
        <% meal.forEach(meal => { %>
          <li><%= meal.name %></li>
        <% }) %>
      </ul>
    </section>
    <form id="add-meal" action="/flights/<%= flight._id %>/meals" method="POST">
      <select name="mealId">
        <% meal.forEach(meal => { %>
          <option value="<%= meal._id %>"></option>
        <% }) %>
      </select>
      <button type="submit">Add Meal Selection</button>
    </form>

</div>




  </main>
  <p></p>



  <%- include('../partials/footer') %>
