<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>

  <h1>Enter a New Flight</h1>
  <div id="form"> 
    <form action="/flights" method="POST">
      <label>Airline:
        <input list="airlines" name="airline"  required>
      </label>
      <datalist id="airlines">
        <option value="Air New Zealand">
        <option value="Air France">
        <option value="Alaska Air">
        <option value="American Airlines">
        <option value="British Airways">
        <option value="Delta">
        <option value="Emirates">
        <option value="Finnair">
        <option value="Fronteir">
        <option value="GOL">
        <option value="KLM">
        <option value="Spirit">
        <option value="TACV">
        <option value="TAM">
        <option value="TAP">
        <option value="Turkish Airlines">
        <option value="Southwest">
        <option value="Virgin Atlantic">
      </datalist><br>
      <label>Airport:
        <input list="airports" name="airport">
      </label>
      <datalist id="airports">
        <option value="AKL">
        <option value="AMS">
        <option value="ATL">
        <option value="CHI">
        <option value="DEN">
        <option value="GIG">
        <option value="GLA">
        <option value="GRB">
        <option value="GRU">
        <option value="JFK">
        <option value="LAX">
        <option value="LIS">
        <option value="LON">
        <option value="MAD">
        <option value="RAI">
        <option value="SEA">
    </datalist>
      <br>
      <label>Flight Number:
        <input type="number" name="flightNo" min="10" max="9999">
      </label><br>
      <label>Date:
        <input type="datetime-local" name="departs" value="" min="" max="" required pattern="\d{4}-\d{2}-\d{2}" >
      </label><br>
      <button type="submit">Add Flight</button>
    </form>
    <p></p>
    <p></p>
  </div>
  <a href="/flights/index">All Flights</a>
  <p></p>
  <a href="/">Return to Home Page</a> 

